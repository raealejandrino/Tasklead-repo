<body>
    <div class="container">

        <div class="row my-5 justify-content-between align-items-center border-bottom pb-3">
            <h1>
                Current Projects
            </h1>
            <a href="/dashboard/new/" target="_blank" class="btn btn-success btn-sm h-25">
                New Project
            </a>
        </div>


        {{#each projects as |project|}}
 
        <article class="projectRowHoverlink">
            <div class="row projectRow d-flex flex-column mx-auto my-3">
                {{> project-main-info project}}
            </div>
        </article>
   
        {{/each}}
    
    </div>

    <script src="/javascript/homepage-logic.js"></script>
</body>
